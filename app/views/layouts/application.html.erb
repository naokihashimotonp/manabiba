<!DOCTYPE html>
<html>
<head>
  <title>Manabiba</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">

  <!-- font-awesomeの読み込み -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

  <!-- jQuery library -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

  <!-- Popper JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>

  <!-- Latest compiled JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</head>
<body>

  <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-inverse navbar-fixed-top">
    <a class="navbar-brand" href="/">Home</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <!-- ログイン時の表示 -->
      <% if session[:user_id] %>
        <li class="nav-item">
          <div class="nav-link">

            あなたのID：
            <%= session[:user_id] %>
          </div>
        </li>
        <li class="nav-item">
          <div class="nav-link">
            <%= link_to("投稿", "/posts/new") %>
          </div>
        </li>
        <li class="nav-item">
          <div class="nav-link">
            <%= link_to("マイページ", "/mypage") %>
          </div>
        </li>
        <li class="nav-item">
          <div class="nav-link">
            <%= link_to("パスワード変更", "/users/password_update") %>
          </div>
        </li>
        <li class="nav-item">
          <div class="nav-link">
            <%= link_to("ログアウト", "/logout", {method: :post}) %>
          </div>
        </li>
      <% else %>
        <!-- ログアウト時の表示 -->
        <li class="nav-item">
          <div class="nav-link">
            <%= link_to("ユーザー登録", "/users/new") %>
          </div>
        </li>
        <li class="nav-item">
          <div class="nav-link">
            <%= link_to("ログイン", "/login") %>
          </div>
        </li>
      <% end %>
      </ul>
      <div class="form-inline">
        <%= form_tag("/search", method: :get) do %>
          <%= text_field_tag "search", nil, class: "form-control mr-sm-2" %>
          <%= submit_tag('Search', :name => nil, class: 'btn btn-outline-success my-2 my-sm-0') %>
        <% end %>
      </div>
    </div>
  </nav>

<%= yield %>

</body>
</html>
